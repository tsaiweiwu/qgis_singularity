Bootstrap: docker
From: ubuntu:16.04


%setup
    echo ${PWD}

    mkdir -p /depot 
    mkdir -p /scratch

%files
    Cesium-1.56.1.zip

%post


    apt-get -y update
    apt-get -y upgrade
    apt-get install -y software-properties-common
    apt-get install -y g++
    apt-get install -y vim git wget cmake
    apt-get install -y unzip zip
    apt-get install -y apache2 libapache2-mod-fcgid


